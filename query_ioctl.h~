#ifndef QUERY_IOCTL_H
#define QUERY_IOCTL_H

#define CARDSIZE 16
#define NAMESIZE 20

#include <linux/ioctl.h>
 
typedef struct
{
    int code, value;
    int[CARDSIZE] number;
    char[NAMESIZE] name;
} transaction_arg_t;
 
#define QUERY_GET_TRANSACTION _IOR('t', 1, transaction_arg_t *)
#define QUERY_CLR_TRANSACTION _IO('t', 2)
#define QUERY_SET_TRANSACTION _IOW('t', 3, transaction_arg_t *)
 
#endif
